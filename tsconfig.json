{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "newLine": "LF",
    "noErrorTruncation": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "lib": ["es2018"],
    "outDir": "dist",
    "resolveJsonModule": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es2018"
  },
  "include": ["src/**/*"],
  "exclude": [
    "dist/**/*",
    "coverage/**/*",
    "node_modules/**/*",
    "jest.config.js",
    "example/**/*",
    ".*"
  ]
}
